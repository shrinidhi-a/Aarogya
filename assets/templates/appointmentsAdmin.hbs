<div class="row">
    {{#each this}}
        <div class="mt-4">
            <div class="card shadow border-0">
                {{!-- <div class="card-header bg-light">
                <p class="mb-0">Appointment - #{{key}}</p>
            </div> --}}
                <div class="card-body">
                    <div class="row">
                        <div class="col-8">
                            <h5>Appointment - #{{key}}</h5>
                            <small id="displayAppointmentDateInfo_{{key}}" class="">On
                                {{DATE}}
                                at
                                {{TIME}}</small>
                        </div>
                        <div class="col-4">
                            <h5
                                class="d-flex align-items-center justify-content-md-end mx-4"
                                id="displayAppointmentInfoBtn_{{key}}"
                                style="height: 100%; cursor:pointer;"
                            >
                                ðŸžƒ
                            </h5>
                        </div>
                    </div>

                    <div class="d-none mt-4" id="displayAppointmentInfo_{{key}}">
                        <div class="row">
                            <div class="col">
                                <h6>Appointment Information:</h6>
                                <p class="card-text">
                                    Date:
                                    {{DATE}}
                                    <br />
                                    Time:
                                    {{TIME}}
                                    <br />
                                </p>
                            </div>

                            <div class="col">
                                <h6>Doctor Information:</h6>
                                <p class="card-text">
                                    Name:
                                    {{DOCTOR.FULLNAME}}
                                    <br />
                                    Qualification:
                                    {{DOCTOR.QUALIFICATION}}
                                    <br />
                                    Email:
                                    <a href="mailto:{{DOCTOR.EMAIL}}">{{DOCTOR.EMAIL}}</a>
                                    <br />
                                    Phone:
                                    <a href="tel:{{DOCTOR.PHONE}}">{{DOCTOR.PHONE}}</a>
                                    <br />
                                </p>
                            </div>

                            <div class="col">
                                <h6>Patient Information:</h6>
                                <p class="card-text">
                                    Name:
                                    {{USER.FULLNAME}}
                                    <br />
                                    Email:
                                    <a href="mailto:{{USER.EMAIL}}">{{USER.EMAIL}}</a>
                                    <br />
                                    Phone:
                                    <a href="tel:{{USER.PHONE}}">{{USER.PHONE}}</a>
                                    <br />
                                </p>
                            </div>
                        </div>

                        <div id="messageDivCancel_{{key}}" class="alert mt-3 shadow d-none">
                            <p>Do you want to cancel appointment?</p>
                            <button
                                class="btn shadow btn-sm"
                                type="button"
                                id="messageDivCancelYes_{{key}}"
                                style="background-color:#fdfdfd; color:#4fa284"
                            >Yes</button>
                            <button
                                class="btn shadow btn-sm"
                                type="button"
                                id="messageDivCancelNo_{{key}}"
                                style="background-color:#fdfdfd; color:#4fa284"
                            >No</button>
                        </div>

                        <div id="messageDivAccept_{{key}}" class="alert mt-3 shadow d-none">
                            <p>Do you want to accept appointment?</p>
                            <button
                                class="btn shadow btn-sm"
                                type="button"
                                id="messageDivAcceptYes_{{key}}"
                                style="background-color:#fdfdfd; color:#4fa284"
                            >Yes</button>
                            <button
                                class="btn shadow btn-sm"
                                type="button"
                                id="messageDivAcceptNo_{{key}}"
                                style="background-color:#fdfdfd; color:#4fa284"
                            >No</button>
                        </div>

                        <div id="messageDivComplete_{{key}}" class="alert mt-3 shadow d-none">
                            <p>Do you want to mark this appointment as completed?</p>
                            <button
                                class="btn shadow btn-sm"
                                type="button"
                                id="messageDivCompleteYes_{{key}}"
                                style="background-color:#fdfdfd; color:#4fa284"
                            >Yes</button>
                            <button
                                class="btn shadow btn-sm"
                                type="button"
                                id="messageDivCompleteNo_{{key}}"
                                style="background-color:#fdfdfd; color:#4fa284"
                            >No</button>
                        </div>

                        <div id="messageDivNoShow_{{key}}" class="alert mt-3 shadow d-none">
                            <p>Do you want to mark this appointment as no show from patient?</p>
                            <button
                                class="btn shadow btn-sm"
                                type="button"
                                id="messageDivNoShowYes_{{key}}"
                                style="background-color:#fdfdfd; color:#4fa284"
                            >Yes</button>
                            <button
                                class="btn shadow btn-sm"
                                type="button"
                                id="messageDivNoShowNo_{{key}}"
                                style="background-color:#fdfdfd; color:#4fa284"
                            >No</button>
                        </div>

                        <div id="messageDivNotify_{{key}}" class="alert mt-3 shadow d-none">
                            <p>Do you want to notify patient for the appointment?</p>
                            <button
                                class="btn shadow btn-sm"
                                type="button"
                                id="messageDivNotifyYes_{{key}}"
                                style="background-color:#fdfdfd; color:#4fa284"
                            >Yes</button>
                            <button
                                class="btn shadow btn-sm"
                                type="button"
                                id="messageDivNotifyNo_{{key}}"
                                style="background-color:#fdfdfd; color:#4fa284"
                            >No</button>
                        </div>

                        {{!-- <div id="prescriptionCardContainer_{{key}}" class="alert mt-3 shadow col-12 mb-3 d-none">
                            <label for="prescription_{{key}}" class="form-label">Describe appointment prescription</label>
                            <textarea
                                name="prescription"
                                class="form-control"
                                id="prescription_{{key}}"
                                required
                            ></textarea>
                            <div class="invalid-feedback">Please fill prescription.</div>
                            <button
                                class="btn shadow btn-sm mt-3"
                                type="button"
                                id="prescriptionCardConfirm_{{key}}"
                                style="background-color:#fdfdfd; color:#4fa284"
                            >Update prescription</button>
                            <button
                                class="btn shadow btn-sm mt-3"
                                type="button"
                                id="prescriptionCardCancel_{{key}}"
                                style="background-color:#fdfdfd; color:#4fa284"
                            >Cancel</button>
                        </div> --}}

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            {{#if (eqCase APPOINTMENTSTATUS "completed")}}
                                <button
                                    class="btn shadow btn-sm"
                                    type="button"
                                    data-bs-toggle="modal"
                                    data-bs-target="#PrescriptionModal"
                                    id="updatePrescription_{{key}}"
                                    style="background-color:#fdfdfd; color:#4fa284"
                                >Add / Update Prescription</button>
                            {{else if (eqCase APPOINTMENTSTATUS "confirmed")}}
                                <button
                                    class="btn shadow btn-sm"
                                    type="button"
                                    id="confirmedNotify_{{key}}"
                                    style="background-color:#fdfdfd; color:#4fa284"
                                >Notify Patient</button>
                                <button
                                    class="btn shadow btn-sm"
                                    type="button"
                                    id="confirmedNoShow_{{key}}"
                                    style="background-color:#fdfdfd; color:#4fa284"
                                >No Show from Patient</button>
                                <button
                                    class="btn shadow btn-sm"
                                    type="button"
                                    id="confirmedComplete_{{key}}"
                                    style="background-color:#fdfdfd; color:#4fa284"
                                >Patient Attended</button>
                                <button
                                    class="btn shadow btn-sm"
                                    type="button"
                                    id="confirmedCancel_{{key}}"
                                    style="background-color:#fdfdfd; color:#4fa284"
                                >Cancel Appointment</button>
                            {{else if (eqCase APPOINTMENTSTATUS "pending")}}
                                <button
                                    class="btn shadow btn-sm"
                                    type="button"
                                    id="pendingAccept_{{key}}"
                                    style="background-color:#fdfdfd; color:#4fa284"
                                >Accept </button>
                                <button
                                    class="btn shadow btn-sm"
                                    type="button"
                                    id="pendingReject_{{key}}"
                                    style="background-color:#fdfdfd; color:#4fa284"
                                >Reject </button>
                            {{else}}
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>